{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/predict",
      "dest": "/api/predict.py"
    },
    {
      "src": "/api/agent", 
      "dest": "/api/agent.py"
    },
    {
      "src": "/api/accuracy",
      "dest": "/api/accuracy.py"
    }
  ],
  "env": {
    "PYTHONPATH": "."
  },
  "functions": {
    "api/*.py": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}